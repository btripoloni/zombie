<div class="row">
  <div class="col-md-12">
    <%= tag_helper(@post.tag_list)%>
    <div class="pull-right">
      <%= link_to t('link.edit'), edit_post_path(@post) %> |
      <%= link_to t('link.back'), posts_path %>
    </div>
    <h1><%= @post.title.capitalize %></h1>
    <p><%= @post.body_with_markdown %></p>
    <hr>
    <h3><%= comments_size(@post) %></h3>
    <%= render "comments/form" %>
    <%= render @post.comments %>
  </div>
</div>
<hr>