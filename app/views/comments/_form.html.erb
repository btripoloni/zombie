<span>Create a new comment</span>
<%= form_for [@post, Comment.new] do |f|%>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<%= f.label :email %><br>
	<%= f.text_field :email %><br>
	<%= f.check_box :show_email%>
	<%= f.label :show_email%><br>
	<%= f.label :comment %><br>
	<%= f.text_area :comment %><br>
	<%= f.submit t('comment.submit')%>
<% end %>
