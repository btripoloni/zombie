<!DOCTYPE html>
<html>
<head>
  <title>Zombie</title>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container">
    <ul class="nav navbar-nav">
      <li><%= link_to t("application.home"), root_path %></li>
      <li><%= link_to t("application.admin"), admin_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class='pull-right' ><%= link_to 'Login', new_author_session_path unless author_signed_in? %></li>
      <li class='dropdown'>
        <a href='#' class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        <%= image_tag gravatar_image, class: 'img-circle' %><%= current_author.email %><span class="caret"></span>
        </a>
        <ul>
          <li><%= link_to t('post.new_post'), new_post_path %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to "Sing out", destroy_author_session_path, method: :delete %></li>
        </ul>
      </li>
    </ul>   
  </div>
</nav>

<div class="container">
  <p id="alert alert-success"><%= notice %></p>
  <p id="alert alert-danger"><%= alert %></p>
</div>

<div class="container header">
  <h1><%= blog.name.capitalize %></h1>
  <h3><%= blog.description.capitalize %></h3>
</div>

<div class="container posts">
  <%= yield %>
  <div class="credit text-center">
    <span>Powered by Zombie</span>
  </div>
</div>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
